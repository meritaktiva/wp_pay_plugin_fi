	/**
	 * Get p24_crc
	 *
	 * @access public
	 * @return string
	 */
	public function getP24Crc()
	{
		$srcCalc = array(
			$this->p24_session_id,
			$this->p24_id_sprzedawcy,
			$this->p24_kwota,
			$this->p24_crc_key
		);
		return md5(implode("|", $srcCalc));
	}


