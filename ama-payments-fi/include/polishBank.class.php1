	{
		$soap = new SoapClient($this->wsdl_address);
		$res = $soap->PaymentMethods(WSDL_USER, WSDL_PASSWORD, WSDL_LANG);
		if ($res->error->errorCode) {
			error_log($res->error->errorMessage);
		}

